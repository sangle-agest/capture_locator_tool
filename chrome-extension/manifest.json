{
  "manifest_version": 3,
  "name": "Smart Locator Inspector",
  "version": "1.0.0",
  "description": "Advanced DOM locator generator with smart XPath, framework detection, and tree hierarchy viewer for QA automation",
  
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Locator Inspector"
  }
}